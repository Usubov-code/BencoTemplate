@model List<Faq>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 mb-5">
            <a asp-area="admin" asp-controller="Faq" asp-action="create" class="btn btn-primary">Create</a>
        </div>
        <hr />
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Title</th>
                        <th scope="col">Content</th>
                        <th scope="col">CollapseText</th>
                        <th scope="col">CollapseContent</th>

                    </tr>
                </thead>
                <tbody>
                    @{int i = 0; }
                    @foreach (var item in Model)
                    {
                        i++;
                        <tr>
                            <th scope="row">@i</th>
                            <td>@item.Title</td>
                            <td>@item.Content</td>
                            <td>@item.CollapseText</td>
                            <td>@item.CollapseContent</td>

                            <td>
                                <a asp-area="admin" asp-controller="Faq" asp-action="update" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                                <a asp-area="admin" asp-controller="Faq" asp-action="delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure ?')" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

