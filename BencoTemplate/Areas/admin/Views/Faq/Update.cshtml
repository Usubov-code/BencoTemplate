@model Faq
@{
    ViewData["Title"] = "Update";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form asp-area="admin" asp-controller="Faq" asp-action="update" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>


                <div class="mb-3">
                    <label asp-for="@Model.Title" class="form-label">Title</label>
                    <input class="form-control" asp-for="@Model.Title">
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Content" class="form-label">Content</label>
                    <input class="form-control" asp-for="@Model.Content">
                    <span asp-validation-for="@Model.Content" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.CollapseText" class="form-label">CollapseText</label>
                    <input class="form-control" asp-for="@Model.CollapseText">
                    <span asp-validation-for="@Model.CollapseText" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.CollapseContent" class="form-label">CollapseContent</label>
                    <input class="form-control" asp-for="@Model.CollapseContent">
                    <span asp-validation-for="@Model.CollapseContent" class="text-danger"></span>
                </div>


                <input asp-for="@Model.Id" hidden />


                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>


